<RepresentationPlugin>
  <Extension name="GeometryRepresentation" group="representations">
    <!-- This is added to the "GeometryRepresentation" proxy xml defined in the
         standard ParaView servermanager xml 
    -->
    <Option representation="105" subproxy="PointSpriteRepresentation" value="0"
            text="Point Sprite" />

    <SubProxy>
      <Proxy name="PointSpriteRepresentation"
        proxygroup="representations" proxyname="PointSpriteRepresentation" />
        
       <InputProperty name="Input" command="NotUsed">
       </InputProperty>

        <ShareProperties subproxy="SurfaceRepresentation">
          <Exception name="Visibility" />
        </ShareProperties>
        
        <ExposedProperties>
          <Property name="RenderMode"/>
          <Property name="RadiusMode"/>
          <Property name="MaxPixelSize"/>
          
          <Property name="OpacityArray"/>
          <Property name="OpacityTransferFunctionEnabled"/>
          <Property name="OpacityPainterEnabled"/>
          <Property name="OpacityVectorComponent"/>
          <Property name="OpacityScalarRange"/>
          <Property name="OpacityUseScalarRange"/>
          <Property name="OpacityTableValues"/>
          <Property name="OpacityGaussianControlPoints"/>
          <Property name="OpacityTransferFunctionMode"/>
          <Property name="OpacityIsProportional"/>
          <Property name="OpacityProportionalFactor"/>
          
          <Property name="RadiusArray"/>
          <Property name="RadiusTransferFunctionEnabled"/>
          <Property name="RadiusTableValues"/>
          <Property name="RadiusGaussianControlPoints"/>
          <Property name="RadiusTransferFunctionMode"/>
          <Property name="RadiusVectorComponent"/>
          <Property name="RadiusScalarRange"/>
          <Property name="RadiusUseScalarRange"/>
          <Property name="RadiusRange"/>
          <Property name="ConstantRadius"/>
          <Property name="RadiusIsProportional"/>
          <Property name="RadiusProportionalFactor"/>
          <Property name="RadiusInitialized"/>
        </ExposedProperties>
    </SubProxy>

    <!-- End of GeometryRepresentation(Extension) -->
  </Extension>

