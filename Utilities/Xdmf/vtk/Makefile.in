@MAKEINCLUDE@ @MAKEQUOTE@targets.make@MAKEQUOTE@

ICE_RELEASE = /ha/cta/unsupported/ICE/Release01.08
ICE_SUPPORT = /ha/cta/unsupported/ICE/Support01.08
ICE_MACHINE = IRIXN32

# add in any extra libraies here
KIT_LIBS = 
