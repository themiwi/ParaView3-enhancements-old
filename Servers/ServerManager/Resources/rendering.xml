<ServerManagerConfiguration>

  <ProxyGroup name="rendering">
  
   <DisplayerProxy name="DefaultDisplayer" class="vtkPVGeometryFilter">
     <InputProperty
        name="Input"
        command="SetInput">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
     </InputProperty>

     <IntVectorProperty
        name="DisplayAsOutline"
        command="SetUseOutline"
        number_of_elements="1"
        default_values="0">
     </IntVectorProperty>

     <IntVectorProperty
        name="ScalarVisibility"
        command="SetScalarVisibility"
        number_of_elements="1"
        default_values="0"
        update_self="1">
        <BooleanDomain name="bool"/>
     </IntVectorProperty>

     <IntVectorProperty
        name="Representation"
        command="SetRepresentation"
        number_of_elements="1"
        default_values="2"
        update_self="1">
     </IntVectorProperty>

     <DoubleVectorProperty
        name="Color"
        command="SetColor"
        number_of_elements="3"
        default_values="1 1 1"
        update_self="1">
        <DoubleRangeDomain name="range" min="0 0 0" max="1 1 1" />
     </DoubleVectorProperty>

     <SubProxy>
       <Proxy name="mapper" class="vtkPolyDataMapper">
          <IntVectorProperty
             name="ImmediateModeRendering"
             command="SetImmediateModeRendering"
             number_of_elements="1"
             default_values="1">
             <BooleanDomain name="bool"/>
          </IntVectorProperty>

          <IntVectorProperty
             name="ScalarMode"
             command="SetScalarMode"
             number_of_elements="1"
             default_values="0">
          </IntVectorProperty>

          <IntVectorProperty
             name="ColorMode"
             command="SetColorMode"
             number_of_elements="1"
             default_values="0">
          </IntVectorProperty>

          <IntVectorProperty
             name="InterpolateColorsBeforeMapping"
             command="SetInterpolateScalarsBeforeMapping"
             number_of_elements="1"
             default_values="0">
             <BooleanDomain name="bool"/>
          </IntVectorProperty>

         <StringVectorProperty 
             name="ColorArray" 
             command="SelectColorArray" 
            number_of_elements="1" /> 

         <ProxyProperty name="LookupTable" command="SetLookupTable">
           <ProxyGroupDomain name="groups">
            <Group name="lookup_tables"/>
           </ProxyGroupDomain>
         </ProxyProperty>
       </Proxy>
     </SubProxy>

     <SubProxy>
       <Proxy name="actor" class="vtkActor">
          <IntVectorProperty
             name="Visibility"
             command="SetVisibility"
             number_of_elements="1"
             default_values="1">
             <BooleanDomain name="bool"/>
          </IntVectorProperty>

          <DoubleVectorProperty
             name="Position"
             command="SetPosition"
             number_of_elements="3"
             default_values="0 0 0">
          </DoubleVectorProperty>

          <DoubleVectorProperty
             name="Scale"
             command="SetScale"
             number_of_elements="3"
             default_values="1 1 1">
          </DoubleVectorProperty>

          <DoubleVectorProperty
             name="Orientation"
             command="SetOrientation"
             number_of_elements="3"
             default_values="0 0 0">
          </DoubleVectorProperty>

          <DoubleVectorProperty
             name="Origin"
             command="SetOrigin"
             number_of_elements="3"
             default_values="0 0 0">
          </DoubleVectorProperty>
       </Proxy>
     </SubProxy>

     <SubProxy>
       <Proxy name="property" class="vtkProperty">
          <IntVectorProperty
             name="Interpolation"
             command="SetInterpolation"
             number_of_elements="1"
             default_values="1">
          </IntVectorProperty>

          <DoubleVectorProperty
             name="PointSize"
             command="SetPointSize"
             number_of_elements="1"
             default_values="1">
            <DoubleRangeDomain name="range" min="1" />
          </DoubleVectorProperty>

          <DoubleVectorProperty
             name="LineWidth"
             command="SetLineWidth"
             number_of_elements="1"
             default_values="1">
            <DoubleRangeDomain name="range" min="1" />
          </DoubleVectorProperty>

          <DoubleVectorProperty
             name="Opacity"
             command="SetOpacity"
             number_of_elements="1"
             default_values="1">
            <DoubleRangeDomain name="range" min="0" max="1" />
          </DoubleVectorProperty>
       </Proxy>
     </SubProxy>
   </DisplayerProxy>

   <DisplayWindowProxy name="DefaultDisplayWindow">
     <ProxyProperty name="Displayers" 
                    command="AddDisplayer"
                    update_self="1">
        <ProxyGroupDomain name="groups">
          <Group name="rendering"/>
          <Group name="3d_widgets"/>
        </ProxyGroupDomain>
     </ProxyProperty>

     <IntVectorProperty 
        name="WindowPosition" 
        command="SetPosition" 
        number_of_elements="2"
        default_values="0 0" > 
     </IntVectorProperty>

     <IntVectorProperty 
        name="Size" 
        command="SetSize" 
        number_of_elements="2"
        default_values="400 400" > 
       <IntRangeDomain name="range" min="1 1" />
     </IntVectorProperty>

     <IntVectorProperty 
        name="OffScreenRendering" 
        command="SetOffScreenRendering" 
        number_of_elements="1"
        default_values="1" > 
     </IntVectorProperty>

     <SubProxy>
       <Proxy name="renderer" class="vtkRenderer">
          <Property
             name="ResetCamera"
             command="ResetCamera"
             immediate_update="1">
          </Property>
          <Property
             name="ResetCameraClippingRange"
             command="ResetCameraClippingRange"
             immediate_update="1">
          </Property>
          <DoubleVectorProperty
             name="BackgroundColor"
             command="SetBackground"
             number_of_elements="3"
             default_values="0 0 0">
            <DoubleRangeDomain name="range" min="0 0 0" max="1 1 1" />
          </DoubleVectorProperty>
          <DoubleVectorProperty
             name="Viewport"
             command="SetViewport"
             number_of_elements="4"
             default_values="0 0 1 1">
            <DoubleRangeDomain name="range" min="0 0 0 0" max="1 1 1 1" />
          </DoubleVectorProperty>
       </Proxy>
     </SubProxy>
     <SubProxy>
       <Proxy name="interactor" class="vtkGenericRenderWindowInteractor">
         <!--no properties for the time being -->
       </Proxy>
     </SubProxy>
     <SubProxy>
       <Proxy name="camera" class="vtkCamera">
         <DoubleVectorProperty
           name="CameraPosition"
           command="SetPosition"
           number_of_elements="3"
           default_values="1 0 0">
         </DoubleVectorProperty>

         <DoubleVectorProperty
           name="CameraFocalPoint"
           command="SetFocalPoint"
           number_of_elements="3"
           default_values="0 0 0">
         </DoubleVectorProperty>

         <DoubleVectorProperty
           name="CameraViewUp"
           command="SetViewUp"
           number_of_elements="3"
           default_values="0 1 0">
         </DoubleVectorProperty>

         <DoubleVectorProperty
           name="CameraViewAngle"
           command="SetViewAngle"
           number_of_elements="1"
           default_values="30">
         </DoubleVectorProperty>

         <DoubleVectorProperty
           name="CameraClippingRange"
           command="SetClippingRange"
           number_of_elements="2"
           default_values="0.01 1000.01">
         </DoubleVectorProperty>
       </Proxy>
     </SubProxy>

     <SubProxy>
       #if defined(VTK_USE_MPI) && defined(_WIN32)
       <Proxy name="composite" class="vtkPVTreeComposite">
         #else
         <Proxy name="composite" class="vtkCompositeRenderManager">
           #endif
           <DoubleVectorProperty
             name="ImageReductionFactor"
             command="SetImageReductionFactor"
             number_of_elements="1"
             default_values="1">
           </DoubleVectorProperty>
         </Proxy>
       </SubProxy>
     </DisplayWindowProxy>

   </ProxyGroup>

 </ServerManagerConfiguration>
